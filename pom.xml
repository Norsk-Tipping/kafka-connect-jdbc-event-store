                                <tag>oracle</tag>
                                <tag>netezza</tag>
                                <tag>json</tag>
                            </tags>

                            <confluentControlCenterIntegration>true</confluentControlCenterIntegration>
                        </configuration>
                    </execution>
                </executions>
